{
    "manifest_version": 2,

    "name": "Hide Completed Items for Trello",
    "description": "Hides completed checklist items on Trello cards",
    "version": "1.3",

    "author": "Mark Kenny",
    "homepage_url": "http://beingmrkenny.co.uk/web-extensions/hide-completed-items-trello",

    "content_scripts": [
        {
            "js": [ "script.js" ],
            "matches": [ "*://trello.com/*" ],
            "run_at": "document_start"
        }
    ],

    "icons": {
        "16": "Icons/192.png",
        "256": "Icons/256.png",
        "32": "Icons/192.png",
        "48": "Icons/192.png",
        "64": "Icons/192.png"
    }

}
